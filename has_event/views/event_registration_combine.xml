<odoo>
  <data>
        <!-- Vista tree de contratos -->
    
<record id="view_event_contrato_tree" model="ir.ui.view">
    <field name="name">Contratos</field>
    <field name="model">event.event</field>
    <field name="priority" eval="50"/>
    <field name="arch" type="xml">
        <tree editable="bottom">
            <field name="id" readonly="1" string="Código"/>
            <button type="object" name="go_to_contratos" string="Ir a" icon="fa-search-plus"/>
            <field name="name" readonly="1"/>
            <field name="date_begin" readonly="1"/>
            <field name="date_end" readonly="1"/>
            <field name="instructor_id"/>
            <field name="titulo" widget="boolean_toggle"/>
            <field name="account_move_id"/>
            <field name="contrato_firmado"/>
            <field name="monto_contrato"/>
        </tree>
    </field>
</record>

        <!-- Vista de búsqueda -->

<record id="view_event_contrato_search" model="ir.ui.view">
    <field name="name">Contratos</field>
    <field name="model">event.event</field>
    <field name="arch" type="xml">
        <search>
    <field name="name" string="Buscar por código, curso, instructor" filter_domain="['|','|', ('id','ilike',self), ('name','ilike',self), ('instructor_id', 'ilike', self)]">
    <filter name="filter_cpendientes" string="Contratos pendientes" domain="[('contrato_firmado', '=', False),('nocontrato', '=', False)]"></filter>
    <separator/>
    <filter name="filter_fpendientes" string="Facturas pendientes" domain="[('account_move_id', '=', False),('nocontrato', '=', False),('date_end','&lt;=',(datetime.datetime.now().strftime('%Y-%m-%d')))]"></filter>
    <separator/>
    <filter name="filter_tpendientes" string="Títulos pendientes" domain="[('titulo', '=', False),('date_end','&lt;=',(datetime.datetime.now().strftime('%Y-%m-%d')))]"></filter>
    <separator/>
    <filter name="filter_ipendientes" string="Instructor pendiente" domain="[['instructor_id', '=', False]]"></filter>
</field>
    <group expand="0" string="Group by">
				<filter string="Instructor" name="instructor" context="{'group_by':'instructor_id'}"/>
				</group>
        </search>
    </field>
</record>



        <!-- acción de apertura de vista en modelos -->

<record id="action_contratos" model="ir.actions.act_window">
        <field name="name">Contratos</field>
        <field name="res_model">event.event</field>
		<field name="type">ir.actions.act_window</field>
        <field name="view_mode">tree</field>
        <field name="context">{'search_default_filter_cpendientes': False}</field>
        <field name="search_view_id" ref="view_event_contrato_search"/>
        <field name="view_id" ref="view_event_contrato_tree"/>
    </record>

        <!-- Menú superior -->

<menuitem 	name="Contratos"
				id="contratos_id"
				sequence="4"
				action="action_contratos"
                groups="event.group_event_manager"
				parent="event.event_main_menu"/>	

    </data>

</odoo>